{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "product"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "original_price": {
      "type": "string",
      "required": true
    },
    "discounted_price": {
      "type": "string",
      "required": false
    },
    "image": {
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ],
      "type": "media",
      "multiple": true
    },
    "description": {
      "type": "blocks"
    },
    "isAvailability": {
      "type": "boolean"
    },
    "size": {
      "type": "string"
    }
  }
}
